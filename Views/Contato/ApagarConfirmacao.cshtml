@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)? </h3>

    <br />

    <a class="btn btn-primary" role="button" asp-contoller="Contato" asp-action="Index">Cancelar exclussão</a>
    <a class="btn btn-danger" role="button" asp-contoller="Contato" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclussão</a>

</div>
