@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}

@if (TempData["MensagemSucesso"] != null)
{
      <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
           @TempData["MensagemSucesso"]
    </div>
}

@if(TempData["MensagemErro"] != null)
{
     <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
    </div>
}

<br />
<div class="text-center"> 
    
    <div class="d-grrid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action
        ="Criar">Adicionar novo contato</a>
    </div>
    <br />
   
   <h1 class="display-4">Listagem de Contatos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
                {
                    foreach (ContatoModel contato in Model)
                    {
                        <tr>
                            <th scope="row">@contato.Id</th>
                            <td>@contato.Nome</td>
                            <td>@contato.Email</td>
                            <td>@contato.Celular</td>
                        <td>
                 
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-warning" asp-route-id="@contato.Id" asp-contoller="Contato" asp-action="editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-contoller="Contato" asp-action="apagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
                    }
                }
        </tbody>
    </table>
</div>